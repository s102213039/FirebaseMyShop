<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CustomTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SignUp" parent="FirebaseUI">
        <item name="colorPrimary">@color/blue_1565C0</item>
        <item name="colorPrimaryDark">@color/blue_0D47A1</item>
        <item name="colorAccent">@color/blue_0288D1</item>
        <item name="colorControlActivated">@color/grey_E0E0E0</item>

    </style>

    <style name="watch_checkbox">
        <item name="android:button">@drawable/watch_status</item>
    </style>

</resources>
